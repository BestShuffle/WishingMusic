<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.bestshuffle.wishingmusic" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <access origin="*" />
    <name>WishingMusic</name>
    <description>
